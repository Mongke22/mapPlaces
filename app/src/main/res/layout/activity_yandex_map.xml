<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.YandexMapActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/mvYandex"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.yandex.mapkit.mapview.MapView>
        <ImageView
            android:id="@+id/ivMarkInTheCenter"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:background="@drawable/place_mark"
            android:layout_gravity="center"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChoosePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_map_margin"
            app:backgroundTint="@color/colorLight"
            app:srcCompat="@drawable/ic_add_location_24"
            app:tint="@color/white" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSubmitPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_map_margin"
            app:backgroundTint="@color/colorLight"
            app:srcCompat="@drawable/ic_action_submit_24"
            app:tint="@color/white" />
        <EditText
            android:id="@+id/etYandex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/et_yandex_margin"
            android:layout_marginEnd="@dimen/et_yandex_margin"
            android:layout_marginTop="@dimen/et_yandex_margin"
            android:padding="10dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="@string/et_yandex_search"
            android:gravity="start"
            android:background="@drawable/search_edit_text"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </EditText>
        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/iv_map_margin"
            android:src="@drawable/ic_item_search_24"
            />
        <ImageView
            android:id="@+id/ivTilt"
            android:layout_width="@dimen/tilt_width_height"
            android:layout_height="@dimen/tilt_width_height"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/iv_map_margin"
            android:src="@drawable/ic_compass_32dp"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>